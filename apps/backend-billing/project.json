{
  "name": "backend-billing",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend-billing/src",
  "projectType": "application",
  "tags": ["type:app", "scope:backend"],
  "implicitDependencies": [
    "platform-authentication",
    "framework-backend-feature-billing"
  ],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/backend-billing",
        "main": "apps/backend-billing/src/main.ts",
        "tsConfig": "apps/backend-billing/tsconfig.app.json",
        "assets": [
          "apps/backend-billing/src/assets",
          "apps/backend-billing/src/migrations"
        ],
        "webpackConfig": "apps/backend-billing/webpack.config.cjs",
        "generatePackageJson": true
      },
      "configurations": {
        "development": {
          "outputHashing": "none"
        },
        "production": {}
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/backend-billing/package.json",
        "{workspaceRoot}/dist/apps/backend-billing/package-lock.json"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": [
        "{workspaceRoot}/dist/apps/backend-billing/workspace_modules"
      ],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "compile-migrations": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "mkdir -p dist/apps/backend-billing/src/migrations && npx tsc $(find apps/backend-billing/src/migrations -name '*.ts') --outDir dist/apps/backend-billing/src/migrations --module commonjs --target es2021 --moduleResolution node --esModuleInterop --skipLibCheck --resolveJsonModule --declaration false --rootDir apps/backend-billing/src/migrations"
      }
    },
    "prune": {
      "dependsOn": [
        "prune-lockfile",
        "copy-workspace-modules",
        "compile-migrations"
      ],
      "executor": "nx:noop"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "backend-billing:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "backend-billing:build:development"
        },
        "production": {
          "buildTarget": "backend-billing:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/backend-billing/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "api-container-image": {
      "dependsOn": ["prune"],
      "cache": false,
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "docker",
        "file": "apps/backend-billing/Dockerfile.api",
        "context": "dist/apps/backend-billing"
      },
      "configurations": {
        "test": {
          "tags": ["ghcr.io/forepath/agenstra-billing-api:latest"]
        },
        "release": {
          "push": true,
          "tags": [
            "ghcr.io/forepath/agenstra-billing-api:latest",
            "ghcr.io/forepath/agenstra-billing-api:$VERSION"
          ]
        }
      },
      "defaultConfiguration": "test"
    },
    "start-containers": {
      "dependsOn": ["api-container-image"],
      "cache": false,
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend-billing",
        "command": "docker compose up -d --force-recreate --remove-orphans"
      }
    },
    "openapi-client-js": {
      "cache": true,
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/clients/billing/js"],
      "options": {
        "command": "npx @openapitools/openapi-generator-cli generate -i libs/domains/framework/backend/feature-billing/spec/openapi.yaml -g typescript-axios -o dist/clients/billing/js --additional-properties=npmName=@forepath/agenstra-billing-client,npmVersion=1.0.0,withInterfaces=true && cd dist/clients/billing/js && npm install && npm run build"
      },
      "configurations": {
        "test": {},
        "release": {
          "command": "npx @openapitools/openapi-generator-cli generate -i libs/domains/framework/backend/feature-billing/spec/openapi.yaml -g typescript-axios -o dist/clients/billing/js --additional-properties=npmName=@forepath/agenstra-billing-client,npmVersion=$VERSION,withInterfaces=true && cd dist/clients/billing/js && node -e \"const fs=require('fs');const pkg=JSON.parse(fs.readFileSync('package.json'));pkg.publishConfig={registry:'https://npm.pkg.github.com'};fs.writeFileSync('package.json',JSON.stringify(pkg,null,2));\" && npm install && npm run build && npm publish"
        }
      },
      "defaultConfiguration": "test"
    }
  }
}
