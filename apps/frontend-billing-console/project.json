{
  "name": "frontend-billing-console",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/frontend-billing-console/src",
  "tags": ["type:app", "scope:frontend"],
  "implicitDependencies": [
    "platform-authentication",
    "backend-billing-manager"
  ],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/frontend-billing-console",
        "index": "apps/frontend-billing-console/src/index.html",
        "browser": "apps/frontend-billing-console/src/main.ts",
        "polyfills": [
          "zone.js",
          "apps/frontend-billing-console/src/polyfills.ts"
        ],
        "tsConfig": "apps/frontend-billing-console/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/frontend-billing-console/public"
          },
          {
            "glob": "**/*",
            "input": "node_modules/monaco-editor",
            "output": "/assets/monaco/"
          }
        ],
        "externalDependencies": ["monaco-editor"],
        "styles": ["apps/frontend-billing-console/src/styles.scss"],
        "scripts": [
          "node_modules/@popperjs/core/dist/umd/popper.min.js",
          "node_modules/bootstrap/dist/js/bootstrap.bundle.min.js",
          "node_modules/apexcharts/dist/apexcharts.min.js"
        ],
        "localize": true,
        "i18nMissingTranslation": "warning"
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "1mb",
              "maximumError": "2mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "fileReplacements": [
            {
              "replace": "libs/domains/framework/frontend/util-configuration/src/lib/environment.ts",
              "with": "libs/domains/framework/frontend/util-configuration/src/lib/environment.production.ts"
            }
          ]
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        },
        "serve": {
          "externalDependencies": []
        },
        "en": {
          "localize": ["en"]
        },
        "de": {
          "localize": ["de"]
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "hmr": false,
        "port": 4500
      },
      "configurations": {
        "development": {
          "buildTarget": "frontend-billing-console:build:development,serve,en"
        },
        "production": {
          "buildTarget": "frontend-billing-console:build:production,serve,en"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n-angular": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "frontend-billing-console:build",
        "outputPath": "apps/frontend-billing-console/src/i18n"
      }
    },
    "extract-i18n": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../remove-context-groups.cjs src/i18n/messages.xlf",
        "cwd": "apps/frontend-billing-console"
      },
      "dependsOn": ["extract-i18n-angular"]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/frontend-billing-console/jest.config.ts",
        "tsConfig": "apps/frontend-billing-console/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "frontend-billing-console:build",
        "port": 4500,
        "staticFilePath": "dist/apps/frontend-billing-console/browser",
        "spa": true
      }
    },
    "prebuild-server": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/frontend-billing-console/server",
        "format": ["cjs"],
        "bundle": true,
        "main": "apps/frontend-billing-console/src/server.ts",
        "tsConfig": "apps/frontend-billing-console/tsconfig.server.json",
        "assets": [],
        "generatePackageJson": true,
        "external": ["express"],
        "deleteOutputPath": false,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false
          }
        }
      },
      "dependsOn": ["build"]
    },
    "server": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/dist/apps/frontend-billing-console/server/browser"
      ],
      "options": {
        "command": "bash -c \"test -d dist/apps/frontend-billing-console/browser && mkdir -p dist/apps/frontend-billing-console/server && cp -r dist/apps/frontend-billing-console/browser dist/apps/frontend-billing-console/server/browser || (echo 'Error: Browser directory not found. Please run build first.' && exit 1)\""
      },
      "dependsOn": ["prebuild-server"]
    },
    "server-container-image": {
      "dependsOn": ["server"],
      "cache": false,
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "docker",
        "file": "apps/frontend-billing-console/Dockerfile.server",
        "context": "dist/apps/frontend-billing-console/server"
      },
      "configurations": {
        "test": {
          "tags": ["ghcr.io/forepath/agenstra-billing-console-server:latest"]
        },
        "release": {
          "push": true,
          "tags": [
            "ghcr.io/forepath/agenstra-billing-console-server:latest",
            "ghcr.io/forepath/agenstra-billing-console-server:$VERSION"
          ]
        }
      },
      "defaultConfiguration": "test"
    },
    "start-containers": {
      "dependsOn": ["server-container-image"],
      "cache": false,
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/frontend-billing-console",
        "command": "docker compose up -d --force-recreate --remove-orphans"
      }
    }
  },
  "i18n": {
    "sourceLocale": "en",
    "locales": {
      "de": "apps/frontend-billing-console/src/i18n/messages.de.xlf"
    }
  }
}
