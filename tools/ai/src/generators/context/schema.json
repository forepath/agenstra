{
  "$schema": "https://json-schema.org/schema",
  "$id": "Context",
  "title": "Context Generator",
  "description": "Nx generator for creating a new context for AI tools",
  "type": "object",
  "properties": {
    "path": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What path would you like to use?",
      "default": "./.agenstra"
    },
    "tool": {
      "type": "string",
      "description": "",
      "enum": ["all", "generic", "claude", "github-copilot", "cursor"],
      "default": "all",
      "x-prompt": "What tool would you like to use?"
    }
  },
  "required": ["path", "tool"]
}
