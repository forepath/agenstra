{
  "name": "ai",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/ai/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/tools/ai",
        "main": "tools/ai/src/index.ts",
        "tsConfig": "tools/ai/tsconfig.lib.json",
        "assets": [
          "tools/ai/*.md",
          {
            "input": "./tools/ai",
            "glob": "install.sh",
            "output": "./bin"
          },
          {
            "input": "./tools/ai/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./tools/ai/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./tools/ai",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./tools/ai",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "tools/ai/jest.config.ts"
      }
    },
    "scripts-binary": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "outputs": ["{workspaceRoot}/dist/tools/ai/agentctx"],
      "options": {
        "commands": [
          "npx esbuild tools/ai/src/cli.ts --bundle --platform=node --format=cjs --outfile=dist/tools/ai/agentctx.mjs --banner:js='#!/usr/bin/env node'",
          "mv dist/tools/ai/agentctx.mjs dist/tools/ai/bin/agentctx",
          "chmod +x dist/tools/ai/bin/agentctx",
          "chmod +x dist/tools/ai/bin/install.sh"
        ],
        "parallel": false
      },
      "configurations": {
        "production": {}
      }
    }
  }
}
